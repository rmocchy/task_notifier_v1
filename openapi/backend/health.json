{
  "openapi": "3.1.0",
  "info": {
    "title": "health",
    "version": "1.0.0",
    "description": "health API Documentation"
  },
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Basic health check status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "healthy",
                        "unhealthy"
                      ]
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "status",
                    "timestamp"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "ユーザー向けエラータイプ（例: Internal Server Error）"
                    },
                    "message": {
                      "type": "string",
                      "description": "開発者向けの詳細エラー内容"
                    }
                  },
                  "required": [
                    "error",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/health_integrate": {
      "get": {
        "operationId": "integratedHealthCheck",
        "responses": {
          "200": {
            "description": "Integrated health check status including database",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "healthy",
                        "unhealthy"
                      ]
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "details": {
                      "type": "object",
                      "properties": {
                        "database": {
                          "type": "boolean"
                        }
                      },
                      "required": [
                        "database"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "timestamp",
                    "details"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "webhooks": {}
}